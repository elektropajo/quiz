<form method="get" action="/quizes">
  <input type="text" name="search" placeholder="Busque una pregunta" />
  <input type="submit" value="Buscar" />
</form>
<h2><%= search %></h2>

<% var i; for (i=0; i < quizes.length; i++) { %>
  <article>
    <a href="quizes/<%= quizes[i].id %>">
      <h2><%= quizes[i].tema + ': ' + quizes[i].pregunta %></h2>
    </a>
    <% if (session.user) { %>
    <a href="quizes/<%= quizes[i].id %>/edit">
      <button type="button">Editar</button>
    </a>
    <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
      <button type="submit" onClick="return confirm('Â¿Borrar <%= quizes[i].pregunta %>?')">Borrar</button>
    </form>
    <% } %>
  </article>
<% } %>
<% if (session.user) { %>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>
